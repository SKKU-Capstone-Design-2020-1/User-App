<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditUserActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_EditUser_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="4dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_EditUser_constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_toolbar">


        <TextView
            android:id="@+id/activity_EditUser_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Name"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_phone"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toTopOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintVertical_bias="0.664" />

        <TextView
            android:id="@+id/activity_EditUser_phone"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Phone"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider2"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider3" />

        <TextView
            android:id="@+id/activity_EditUser_password"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="password"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider3"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider4" />

        <TextView
            android:id="@+id/activity_EditUser_confirm"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="confirm"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider4" />

        <View
            android:id="@+id/activity_EditUser_divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider2"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toTopOf="@+id/activity_EditUser_constraintLayout1" />

        <View
            android:id="@+id/activity_EditUser_divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider3"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider1" />

        <View
            android:id="@+id/activity_EditUser_divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider4"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider2" />

        <View
            android:id="@+id/activity_EditUser_divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toStartOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider3" />


        <EditText
            android:id="@+id/activity_EditUser_editName"
            android:layout_width="295dp"
            android:layout_height="69dp"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_editPhone"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/activity_EditUser_name"
            app:layout_constraintTop_toTopOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/activity_EditUser_editPhone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:autofillHints="010-1234-5678"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider3"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toEndOf="@+id/activity_EditUser_phone"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider2" />

        <EditText
            android:id="@+id/activity_EditUser_editPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:autofillHints="enter password"
            android:ems="10"
            android:inputType="numberPassword"
            app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_divider4"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toEndOf="@+id/activity_EditUser_password"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider3" />

        <EditText
            android:id="@+id/activity_EditUser_editconfirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:autofillHints="enter password again"
            android:ems="10"
            android:inputType="numberPassword"
            app:layout_constraintBottom_toBottomOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintEnd_toEndOf="@+id/activity_EditUser_constraintLayout1"
            app:layout_constraintStart_toEndOf="@+id/activity_EditUser_confirm"
            app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_divider4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/activity_EditUser_save_change_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/primary_rounded_botton"
        android:text="Save Changes"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/default_font_normal"
        app:layout_constraintBottom_toTopOf="@+id/activity_EditUser_logout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_EditUser_constraintLayout1" />

    <Button
        android:id="@+id/activity_EditUser_logout_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/primary_outlined_rounded_botton"
        android:text="Log Out"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_font_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>