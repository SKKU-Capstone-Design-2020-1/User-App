<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/activity_splash"
        android:alpha="0.5"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        >

        <TextView
            android:id="@+id/activity_login_Textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Don't have an account?"
            android:textColor="#000000"
            android:textSize="@dimen/default_font_normal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activity_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="sign up"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/default_font_normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_login_Textview2"
            android:layout_width="246dp"
            android:layout_height="85dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="RSR"
            android:textSize="@dimen/default_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#000000"
             />


        <TextView
            android:id="@+id/activity_login_Textview3"
            android:layout_width="246dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/default_font_normal"
            android:text="Realtime seat reservation"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/activity_login_ID"
            android:layout_width="344dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/primary_outlined_edittext"
            android:hint="  ID (E-mail)"
            android:paddingLeft="@dimen/default_padding"
            android:textSize="@dimen/default_font_normal"
            android:textColorHint="#686E73"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/activity_login_Password"
            android:layout_width="344dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/primary_outlined_edittext"
            android:hint="  Password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/default_padding"
            android:textColorHint="#686E73"
            android:textSize="@dimen/default_font_normal"
            android:textStyle="normal" />

        <Button
            android:id="@+id/activity_login_Login"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/primary_rounded_botton"
            android:text="Login"
            android:textSize="@dimen/default_font_normal"
            android:textColor="#FFFFFF"/>


    </LinearLayout>


</RelativeLayout>