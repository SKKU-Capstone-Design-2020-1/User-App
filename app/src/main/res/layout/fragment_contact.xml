<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="문의하기"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의제목"
            android:layout_marginLeft="20dp"
            android:textColor="#050505"
            />

        <EditText
            android:id="@+id/fagment_contact_category"
            android:layout_width="267dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/primary_outlined_edittext"
            android:textColorHint="#686E73"

            android:textStyle="normal"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 "
            android:layout_marginLeft="20dp"
            android:textColor="#050505"
            />

        <EditText
            android:id="@+id/fagment_contact_id"
            android:layout_width="267dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/primary_outlined_edittext"
            android:hint="  ID (E-mail)"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColorHint="#686E73"
            android:textStyle="normal" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="문의 내용 "
            android:textColor="#050505"

            />

        <EditText
            android:id="@+id/fagment_contact_inquire"
            android:layout_width="266dp"
            android:layout_height="325dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/primary_outlined_edittext"

            android:textStyle="normal" />
    </RelativeLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/primary_rounded_botton"
        android:text="문의접수"
        android:textColor="#FFFFFF" />


</LinearLayout>